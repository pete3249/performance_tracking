<h1>Create a new profile</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= @user.errors.count %> error(s) prohibited this user from being created:</h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<form action="/users" method="post">
    <p>
        <div><label for="first_name"> First name </label></div>
        <input type="text" id="first_name" name="user[first_name]" value="<%= @params[:first_name] %>">
    </p>
    <p>
        <div><label for="last_name"> Last name </label></div>
        <input type="text" id="last_name" name="user[last_name]" value="<%= @params[:last_name] %>">
    </p>
    <p>
        <div><label for="email"> Email </label><div>
        <input type="email" id="email" name="user[email]" value="<%= @params[:email] %>">
    </p>
    <p>
        <div><label for="password"> Password </label><div>
        <input type="password" id="password" name="user[password]">
    <p>
    <p>
        <input type="submit" value="Sign Up">
    </p>
</form>